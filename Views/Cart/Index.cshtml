@{ ViewData["Title"] = "Home Page";
    List<Product> products = (List<Product>)ViewData["products"];
    List<CartDetail> cartDetails = (List<CartDetail>)ViewData["cart"];
}


<div style="height:30px;">
    <span style="float: left">
        <strong> VIEW CART</strong> | <a href="/Home/Index">Continue Shopping </a> | <a href="/Checkout/Index">Checkout</a>
    </span>
    <span style="float:right" id="totalPrice"></span>
</div>
@{
    if (cartDetails == null)
    {
        <div align="center">
            <span style="font-size:20px">
                There is nothing in your cart!
                Browse our products <a href="/">here</a> now! :)
            </span>
        </div>
    }

    else
    {
        <span style=" float:right">


            Total: $ <span id="cTotal">
                <script src="~/js/Cart.js"></script>
            </span>

        </span>
        

        <table align="center">
            <tr>
                <td align="center">
                    Product
                </td>
                <td>
                </td>
                <td align="center">
                    Quantity
                </td>
                <td>
                </td>
                <td align="center">
                    Price
                </td>

            </tr>
            @foreach (var orderd in cartDetails)

            {

                <tr>
                    <td>
                        <div id="displayItems">

                            <div class="card bg-light m-3" style="float: left; border: 1px solid black; text-align: center; padding: 10px 10px; width: 220px; height: 300px; border-radius:5px;">
                                <div class="card-header">

                                    <img src="@orderd.Product.Image" width="100" /> <br />

                                </div>
                                <div class="card-body">

                                    <h5 class="card-title">@orderd.Product.Name </h5>
                                    <div class="card-text">
                                        <div style="height:60px; text-align:left; font-size:12pt;">
                                            @orderd.Product.Description
                                        </div>
                                        <br />
                                        <br />
                                        <br />

                                    </div>

                                </div>
                            </div>



                        </div>
                    </td>
                    <td>
                        <button id="increment" onclick="Update_Inc()">+</button>
                    </td>
                    <td align="center">
                        <div id="number_@orderd.ProductId">
                            <script src="~/js/Cart.js"></script>
                        </div>
                    </td>
                    <td>
                        <button id="decrement" onclick="Update_Dec()">-</button>
                    </td>
                    <td align="center">

                        <span>
                            $<span id="Total_@orderd.ProductId">
                                <script src="~/js/Cart.js"></script>


                            </span>

                        </span>


                    </td>
                    <td>
                        <button id="decrement" value="" onclick="Update_Dec()">Remove</button>
                    </td>
                    <td>
                        <div id="cTotal"></div>
                    </td>
                </tr>


            }

        </table>

        }
    }
