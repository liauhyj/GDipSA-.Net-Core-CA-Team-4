
@{
    ViewData["Title"] = "Summary";
}
@model Layout.Models.Cart 
@{
    Layout = null;
}


<div id="cart" style="background-color: #e3e3e3;padding: 10px; text-align:center;">
    <span class="caption">
        <b>Cart Detail：</b>
        @if (Model != null)
        {
            @Model.Lines.Sum(x => x.Quantity) <span>Unit,</span>
            @Model.ComputeTotalPrice().ToString("c")
        }


</div>

