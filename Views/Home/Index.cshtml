@{
    ViewData["Title"] = "Home Page";
    List<Products> products = (List<Products>)ViewData["products"];


}

<script>
    function cartCounting() {
        var counterobj = document.getElementById("cart_counter");

        var count = parseInt(counterobj.innerHTML);
        //object.value: when
        count++;

        counterobj.innerHTML = count;

    }

</script>

<div style="height:100px;">

    <div class="container" style="float:left;">

        <span><strong>Hello,//add username using razor// </strong></span>
        <a asp-area="" asp-controller="Home" asp-action="Index" style="text-decoration: underline;">Home</a>
        <span>|</span>
        <a asp-area="" asp-controller="MyPurchases" asp-action="Index" style="text-decoration: underline;">My Purchases</a>
        <span>|</span>
        <a class="@ViewData["Is_Login"]" asp-area="" asp-controller="Login" asp-action="Index" style="text-decoration: underline;">Login</a>
    </div>

    <div style="float:right; ">


        <img src="~/images/Cart.png" width="30" />
        <div id="cart_counter" style="border:1px solid black; width:30px; border-radius: 15px; padding: 5px 10px; display:inline; font-weight:bold;">
            0
        </div>
    </div>

    <div class="input-group mb-3" style="padding-top:10px;">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1"><img src="~/images/search.png" width="20" /></span>
        </div>
        <input type="text" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="basic-addon1">
    </div>

</div>


<div style="height: 900px; ">




    @{
        foreach (Products prod in products)
        {


            <div class="card bg-light m-3" style="float: left; border: 1px solid black; text-align: center; padding: 10px 10px; width: 220px; height: 380px; border-radius:5px;">
                <div class="card-header">
                    <img src="@prod.Image" width="100" /> <br />

                </div>
                <div class="card-body">
                    <h5 class="card-title">@prod.Name </h5>
                    <p class="card-text">
                        <div style="height:60px; text-align:left; font-size:12pt;">
                            @prod.Description
                        </div>
                        <br />
                        <br />
                        <button class="btn btn-primary" style="padding: 5px 5px; width:160px;" onclick="return cartCounting();">$@prod.Price - Add To Cart</button>
                    </p>
                </div>
            </div>

        }
    }
</div>
