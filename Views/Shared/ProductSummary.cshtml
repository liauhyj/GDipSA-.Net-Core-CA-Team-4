
@{
    ViewData["Title"] = "ProductSummary";
}
@model Layout.Models.Product
 

    <div class="item">
        <h3>@Model.Name</h3>
        <p><img src="@Model.Image" style="width: 100px;height: 100px;" /></p>
        <p>@Model.Description</p>
        <h4>@Model.Price.ToString("c")</h4>
        @using (Html.BeginForm("AddToCart", "Home"))
        {
    @Html.HiddenFor(p => p.Id)
                    
         <input type="submit" value="+放入购物车" />}


    </div>